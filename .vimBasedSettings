" *********************
" Basic settings of Vim
" *********************
" to store the cursor position
autocmd BufWinLeave ?* silent mkview
autocmd BufWinEnter ?* silent loadview

" Persistent undo
if has('persistent_undo')
  set undodir=~/.vim/info/undo
  set undofile
endif

colorscheme jellybeans_custom "setting colorscheme

syntax on

set nocursorline " ターミナルVimだと遅くなる
highlight CursorLine cterm=none ctermbg=235
highlight CursorLineNr cterm=bold ctermfg=yellow ctermbg=0

filetype indent plugin on

set nobackup
set number "line number
set expandtab "change to blanks tab character
set tabstop=2 "tab is two blanks
set shiftwidth=2 "auto indent is two blanks
set softtabstop=2 "width for the blanks, the cursor shifts tab
set autoindent "continue to indent a new line
set smartindent "a new line to increase or decrease the indent
set ignorecase "not case sensitive when searching
set listchars=tab:»･,trail:･,eol:↲ " seeing white space
set title "indicate a title
set hlsearch "highlight the search result characters
set backspace=start,eol,indent
set t_ut= " tmux start vim color
set t_Co=256 " tmux start vim color
set list "visualization spaces and line breaks
set nocursorcolumn
" set colorcolumn=
" highlight ColorColumn ctermbg=6
set clipboard+=unnamed
set wildmode=list:longest
set nosmartcase " If a pattern contains an uppercase, override ignorecase options.
set wildignorecase
set noeb vb t_vb= " no beep sound
set cmdheight=1 " command line buffer height
set laststatus=2 " status line position

" created template
autocmd BufNewFile *.tex 0r $HOME/dotfiles/.vimTemplates/template.tex

" netrw's style is liststyle
let g:netrw_liststyle=3

